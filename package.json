{
  "name": "vent",
  "version": "1.0.0",
  "description": "An event superclass for automatic method generation",
  "main": "dist/vent.js",
  "scripts": {
    "lint": "eslint src/**",
    "test": "mocha --compilers js:babel-core/register test",
    "build": "rimraf dist && mkdir dist && babel -s true --minified -o dist/vent.js src/Vent.js",
    "default": "npm run test && npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dweidenfeld/vent.git"
  },
  "keywords": [
    "event",
